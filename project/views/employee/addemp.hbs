 <h3>{{viewTitle}}</h3>

<form action="/home/employee" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{employee._id}}">
    <div class="form-row">
    <div class="form-group col-md-3 ">
        <label>Employee Id</label>
        <input type="text" class="form-control" name="emid" placeholder="Employee Id" value="{{employee.emid}}">
        <div class="text-danger">
        </div>
    </div>
    <div class="form-group col-md-3">
        <label>Name</label>
        <input type="text" class="form-control" name="fullName"  placeholder="Full Name" value="{{emp.fullName}}">
        <div class="form-group col-md-3">
        <div class="text-danger">
            {{emp.fullNameError}}</div>

            

        </div>
    </div>
    
    <div class="form-group col-md-3">
     <label>Email</label>
        <input type="text" class="form-control" name="email" placeholder="Email" value="{{emp.email}}">
        <div class="text-danger">
            {{emp.emailError}}</div>
    
    </div>
    <div class="form-row">
        <div class="form-group col-md-3">
            <label>Mobile</label>
            <input type="number"  min="10" max="10" class="form-control" name="mobile" placeholder="Mobile" value="{{emp.mobile}}">
        </div>
        <div class="form-group col-md-3">
            <label>Address</label>
            <input type="text"  max="15" class="form-control" name="city" placeholder="Address" value="{{emp.city}}">
        </div>
        
        
         <div class="form-group col-md-3">
            <label>Date Of Join</label>
            <input type="date" class="form-control" name="join" placeholder="" value="{{emp.join}}">
        </div>
         <div class="form-group col-md-3">
            <label>Designation</label>
             <input type="text" class="form-control" name="desig" placeholder="" value="{{emp.desig}}">
                   </div>
         <div class="form-group col-md-3">
            <label>Salary</label>
            <input type="number" class="form-control" name="salary" placeholder="Salary" value="{{emp.salary}}">
        </div>
    
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
        <a class="btn btn-secondary" href="/home/employee/list"><i class="fa fa-list-alt"></i> View All</a>
    </div>
    
