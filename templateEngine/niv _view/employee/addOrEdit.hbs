<h3>{{viewTitle}}</h3>

<form action="/employee" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{employee._id}}">
    <div class="form-row">
    <div class="form-group col-md-4">
        <label><b>Itemid</b></label>
        <input type="text" class="form-control" name="itemid" placeholder="item id" value="{{employee.itemid}}">
        <div class="text-danger">
            {{employee.itemidError}}</div>
    </div>
    <div class="form-group col-md-4">
        <b><label>item name</label></b>
        <input type="text" class="form-control" name="itemname" placeholder="item name" value="{{employee.itemname}}">
        <div class="text-danger">
            {{employee.itemnameError}}</div>
    </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-4">
          <b>  <label>quantity</label></b>
            <input type="text" class="form-control" name="qty" placeholder="quantity" value="{{employee.qty}}">
        </div>
        <div class="form-group col-md-4">
           <b> <label>Selling price</label></b>
            <input type="text" class="form-control" name="sellingprice" placeholder="selling price" value="{{employee.sellingprice}}">
        </div>
    </div>
    <div class="form-row">
    <div class="form-group col-md-4">
           <b> <label>cost price</label></b>
            <input type="text" class="form-control" name="costprice" placeholder="cost price" value="{{employee.costprice}}">
        </div>
        <div class="form-group col-md-4">
           <b> <label>GST</label></b>
            <input type="text" class="form-control" name="GST" placeholder="GST" value="{{employee.GST}}">
        </div>
        </div>
        <div>
        <div class="form-group col-md-4">
           <b> <label>Supplier id</label></b>
            <input type="text" class="form-control" name="supplierid" placeholder="supplier id" value="{{employee.supplierid}}">
        </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
        <a class="btn btn-secondary" href="/employee/list"><i class="fa fa-list-alt"></i> View All</a>
    </div>
</form>